{
  "manifest_version": 3,
  "name": "U-Tube Timestamp Marker",
  "version": "1.0",
  "description": "Smart video timestamp marker with notes and search capabilities",
  "permissions": ["storage", "activeTab", "tabs"],
  "host_permissions": ["https://*.youtube.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon48.png"
    }
  },
  "icons": {
    "48": "icons/icon48.png"
  },
  "content_scripts": [{
    "matches": ["https://*.youtube.com/*"],
    "js": ["content.js"]
  }],
  "background": {
    "service_worker": "background.js"
  }
}